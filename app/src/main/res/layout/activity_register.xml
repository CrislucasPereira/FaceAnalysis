<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    android:background="#F4F5EF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="32dp">

        <!-- Ícone / Logo -->
        <ImageView
            android:id="@+id/imgRegisterLogo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/ic_face"
            android:contentDescription="Logo" />

        <!-- Título -->
        <TextView
            android:id="@+id/txtRegisterTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Criar conta"
            android:textColor="#1C1C1E"
            android:textSize="28sp"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginBottom="24dp" />

        <!-- Campo Nome -->
        <EditText
            android:id="@+id/edtName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Nome completo"
            android:background="@drawable/field_bg"
            android:backgroundTint="@null"
            android:paddingHorizontal="16dp"
            android:textColor="#222222"
            android:textColorHint="#9C9C9C"
            android:layout_marginBottom="16dp" />

        <!-- Campo Email -->
        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:background="@drawable/field_bg"
            android:backgroundTint="@null"
            android:paddingHorizontal="16dp"
            android:textColor="#222222"
            android:textColorHint="#9C9C9C"
            android:layout_marginBottom="16dp" />

        <!-- Campo Senha -->
        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Senha"
            android:inputType="textPassword"
            android:background="@drawable/field_bg"
            android:backgroundTint="@null"
            android:paddingHorizontal="16dp"
            android:textColor="#222222"
            android:textColorHint="#9C9C9C"
            android:layout_marginBottom="12dp" />

        <!-- Feedback da força -->
        <TextView
            android:id="@+id/tvPasswordStrength"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A senha deve conter: mínimo 8 caracteres, letra maiúscula, minúscula, número e símbolo."
            android:textColor="#B71C1C"
            android:textSize="13sp"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginBottom="8dp" />

        <!-- Indicador visual da força -->
        <ProgressBar
            android:id="@+id/progressPasswordStrength"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:progress="0"
            android:max="5"
            android:progressTint="#B71C1C"
            android:indeterminate="false"
            android:layout_marginBottom="24dp" />

        <!-- Termos e condições -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <Switch
                android:id="@+id/switchTerms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:thumbTint="@color/switch_thumb_selector"
                android:trackTint="@color/switch_track_selector"
                tools:ignore="UseSwitchCompatOrMaterialXml" />

            <TextView
                android:id="@+id/tvTerms"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:textColor="#444444"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/terms_text"
                android:linksClickable="true"
                android:focusable="true"
                android:clickable="true"
                android:layout_marginEnd="8dp" />
        </LinearLayout>

        <!-- Notificações -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <Switch
                android:id="@+id/switchNotify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:thumbTint="@color/switch_thumb_selector"
                android:trackTint="@color/switch_track_selector" />

            <TextView
                android:id="@+id/tvNotify"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Aceito receber avisos e comunicados (opcional)."
                android:textColor="#444444"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_regular" />
        </LinearLayout>

        <!-- Botão Cadastrar -->
        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Cadastrar"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="#FFFFFF"
            android:background="@drawable/btn_ripple_black_border_yellow"
            android:elevation="3dp"
            android:layout_marginBottom="24dp" />

        <!-- Link para login -->
        <TextView
            android:id="@+id/txtBackToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Já possui conta? Faça login"
            android:textColor="#FFB300"
            android:textSize="15sp"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginBottom="12dp" />

    </LinearLayout>
</ScrollView>
