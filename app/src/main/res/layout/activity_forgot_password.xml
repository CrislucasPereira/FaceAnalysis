<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    android:background="#F4F5EF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="32dp">

        <!-- Ícone / Logo -->
        <ImageView
            android:id="@+id/imgForgotLogo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/ic_face"
            android:contentDescription="Logo" />

        <!-- Título -->
        <TextView
            android:id="@+id/txtForgotTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recuperar senha"
            android:textSize="28sp"
            android:textColor="#1C1C1E"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginBottom="12dp" />

        <!-- Subtítulo -->
        <TextView
            android:id="@+id/txtForgotSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Digite seu e-mail para receber o link de redefinição."
            android:textSize="15sp"
            android:textColor="#6E6E6E"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- Campo de e-mail -->
        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:background="@drawable/field_bg"
            android:backgroundTint="@null"
            android:paddingHorizontal="16dp"
            android:textColor="#222222"
            android:textColorHint="#9C9C9C"
            android:layout_marginBottom="24dp" />

        <!-- Botão enviar -->
        <Button
            android:id="@+id/btnSendReset"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Enviar link"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="#FFFFFF"
            android:background="@drawable/btn_ripple_black_border_yellow"
            android:elevation="3dp"
            android:layout_marginBottom="24dp" />


        <!-- Voltar ao login -->
        <TextView
            android:id="@+id/txtBackToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voltar ao login"
            android:textColor="#FFB300"
            android:textSize="15sp"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginBottom="12dp" />

    </LinearLayout>
</ScrollView>
