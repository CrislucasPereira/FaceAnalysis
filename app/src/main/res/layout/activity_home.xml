<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F5EF"
    android:padding="24dp"
    tools:context=".HomeActivity">

    <!-- Grupo central (alinhado verticalmente no meio) -->
    <LinearLayout
        android:id="@+id/centerGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true">

        <!-- Ícone principal -->
        <ImageView
            android:id="@+id/imgCar"
            android:layout_width="220dp"
            android:layout_height="170dp"
            android:layout_marginBottom="24dp"
            android:elevation="6dp"
            android:contentDescription="Carro"
            android:src="@drawable/ic_car"
            android:scaleType="fitCenter" />

        <!-- Logo (Drive + On) -->
        <LinearLayout
            android:id="@+id/layoutDriveOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtDrive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drive"
                android:textSize="38sp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="#1C1C1E"
                android:letterSpacing="0.02" />

            <TextView
                android:id="@+id/txtOn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="On"
                android:textSize="38sp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="#FFB300"
                android:letterSpacing="0.02" />
        </LinearLayout>

        <!-- Subtítulo -->
        <TextView
            android:id="@+id/txtSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Segurança em cada viagem"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_light"
            android:textColor="#6E6E6E"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="2dp" />

    </LinearLayout>

    <!-- Botão principal fixo -->
    <Button
        android:id="@+id/btnEnter"
        android:layout_width="260dp"
        android:layout_height="56dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="48dp"
        android:text="Entrar"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="#FFFFFF"
        android:background="@drawable/btn_ripple_black_border_yellow"
        android:elevation="4dp" />

</RelativeLayout>
