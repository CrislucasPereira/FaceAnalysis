<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    android:background="#F4F5EF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="32dp">

        <!-- Ícone / Logo -->
        <ImageView
            android:id="@+id/imgHomeLogo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/ic_face"
            android:contentDescription="Logo do App" />

        <!-- Saudação -->
        <TextView
            android:id="@+id/txtWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bem-vindo(a)!"
            android:textSize="26sp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="#1C1C1E"
            android:layout_marginBottom="8dp" />

        <!-- Email do usuário -->
        <TextView
            android:id="@+id/txtUserEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="carregando e-mail..."
            android:textSize="16sp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="#6E6E6E"
            android:layout_marginBottom="40dp" />

        <!-- Botão Iniciar Análise -->
        <Button
            android:id="@+id/btnStartAnalysis"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Iniciar Análise"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="#FFFFFF"
            android:background="@drawable/btn_ripple_black_border_yellow"
            android:elevation="3dp"
            android:layout_marginBottom="16dp" />

        <!-- Botão Ver Perfil -->
        <Button
            android:id="@+id/btnViewProfile"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Ver Perfil"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="#FFFFFF"
            android:background="@drawable/btn_ripple_black_border_yellow"
            android:elevation="3dp"
            android:layout_marginBottom="16dp" />

        <!-- Botão Relatório Diário -->
        <Button
            android:id="@+id/btnDailyReport"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Relatório Diário"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="#FFFFFF"
            android:background="@drawable/btn_ripple_black_border_yellow"
            android:elevation="3dp"
            android:layout_marginBottom="16dp" />

        <!-- Botão Sair -->
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Sair da Conta"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="#FFFFFF"
            android:background="@drawable/btn_ripple_black_border_yellow"
            android:elevation="3dp"
            android:layout_marginBottom="8dp" />

    </LinearLayout>
</ScrollView>
